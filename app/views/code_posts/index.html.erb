<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>Database (<%= get_database_count %>)</h1>
    <ol class="breadcrumb">
      <li><a href="<%= root_path %>">
        <i class="fa fa-dashboard"></i> Home</a>
      </li>
      <li class="active">Database</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <!-- <div class="box-header"></div> NO HEADER-->
          <!-- /.box-header -->
          <div class="box-body">
            <table id="database-table" class="table table-bordered table-striped">
              <thead>
              <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Language</th>
                <th>Upvotes</th>
                <th>Downvotes</th>
              </tr>
              </thead>

              <tbody>
              <% @code_posts.each do |code_post| %>
              <tr>
                <td><%= code_post.title %></td>
                <td><%= code_post.category %></td>
                <td><%= code_post.code_language %></td>
                <td><%= code_post.upvotes.count %></td>
                <td><%= code_post.downvotes.count %></td>
              </tr>
              <% end %>
              </tbody>
              
              <tfoot>
                <tr>
                  <th>Title</th>
                  <th>Category</th>
                  <th>Language</th>
                  <th>Upvotes</th>
                  <th>Downvotes</th>
                </tr>
              </tfoot>

            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script type="text/javascript">
  $(function () {
    $("#database-table").DataTable();
  });
</script>
