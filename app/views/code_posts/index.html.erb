<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <%= render 'layouts/alerts' %>

  <section class="content-header">
    <br>
    <ol class="breadcrumb">
      <li><a href="<%= root_path %>">
        <%= fa_icon "clone", text: "Home" %>
        </a>
      </li>
      <li class="active">Database</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body">
            <table id="database-table" class="display responsive no-wrap">
              <thead>
              <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Language</th>
                <th>Reputation</th>
              </tr>
              </thead>

              <tbody>
              </tbody>

              <tfoot>
                <tr>
                  <th>Title</th>
                  <th>Category</th>
                  <th>Language</th>
                  <th>Reputation</th>
                </tr>
              </tfoot>

            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script>
  $('#database-table').DataTable({
    "processing": true,
    "serverSide": true,
    "ajax": "code/datatable_ajax/"
  });
</script>
