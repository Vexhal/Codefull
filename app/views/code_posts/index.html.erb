<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <br>
    <ol class="breadcrumb">
      <li><a href="<%= root_path %>">
        <%= fa_icon "clone", text: "Home" %>
        </a>
      </li>
      <li class="active">Database</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body">
            <table id="database-table" class="display responsive no-wrap">
              <thead>
              <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Language</th>
                <th>Reputation</th>
              </tr>
              </thead>

              <tbody>
              <% @code_posts.each do |code_post| %>
              <tr>
                <td><%= link_to code_post.title, show_code_path(code_post) %>
                  <% if user_signed_in? && (current_user.is_admin? || is_owner?(code_post)) %>
                    <i class="fa fa-remove"></i>
                    <!-- TODO add link_to remove action -->
                  <% end %>
                  <br><small><%= code_post.get_email %></small>
                </td>
                <td><%= code_post.category %></td>
                <td><%= code_post.get_language %></td>
                <td><%= code_post.get_reputation_html %></td>
              </tr>
              <% end %>
              </tbody>

              <tfoot>
                <tr>
                  <th>Title</th>
                  <th>Category</th>
                  <th>Language</th>
                  <th>Reputation</th>
                </tr>
              </tfoot>

            </table>
          </div>
          <!-- /.box-body -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<script>
  $('#database-table').DataTable();
</script>
