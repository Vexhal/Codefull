<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <%= render 'layouts/alerts' %>
  <section class="content-header">
    <h1><%= @code_post.title %><% if !current_user.nil? && (is_owner?(@code_post) || current_user.is_admin?) %>
          <%= link_to edit_code_path(@code_post) do %>
            <%= fa_icon "pencil" %>
          <% end %>
        <% end %></h1>
    <ol class="breadcrumb">
      <li><a href="<%= root_path %>">
        <%= fa_icon "clone", text: "Home" %>
        </a>
      </li>
      <li><a href="<%= code_path %>">Database</a></li>
      <li class="active"><%= @code_post.id %> (VIEW)</li>
    </ol>
  </section>

  <section class="content">
    <div class="row">
      <div class="col-md-8">
        <div class="box box-default">
          <div id="editor"><%= @code_post.code %></div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="box box-default">
          <div class="box-header">
            <h3 class="box-title"><%= fa_icon "question-circle-o", text: " Other information" %></h3>
            <%= render 'layouts/collapsers' %>
          </div>
          <div class="box-body">
            <div class="table-responsive">
                <table class="table no-margin">
                  <tr>
                    <td align="right" width="10%"><%= fa_icon "folder-o"%></td>
                    <td>Category</td>
                    <td><%= @code_post.category %></td>
                  </tr>
                  <tr>
                    <td align="right"><%= fa_icon "code"%></td>
                    <td>Language</td>
                    <td><%= @code_post.code_language %></td>
                  </tr>
                  <tr>
                    <td align="right"><%= fa_icon "star"%></td>
                    <td>Reptutation</td>
                    <td><%= @code_post.get_reputation_html %></td>
                  </tr>
                </table>
            </div>
          </div>
          <div class="box-footer" style="padding-left: 17px;padding-right: 17px;">
            <%= render 'votes' %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  $(document).ready(function() {
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/dawn");
    editor.setShowPrintMargin(false);
    editor.setReadOnly(true);
  });
</script>
